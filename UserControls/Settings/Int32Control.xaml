<UserControl x:Class="Shiftless.Clockwork.Assets.Editor.UserControls.Settings.Int32Control"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Shiftless.Clockwork.Assets.Editor.UserControls.Settings"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <TextBox x:Name="Body"
             PreviewTextInput="Body_PreviewTextInput"
             TextChanged="Body_TextChanged"
             Width="150"
             Foreground="{DynamicResource TextColorMainBrush}"
             Background="{DynamicResource InputBoxColorBrush}"
             BorderThickness="0 0 0 2"
             BorderBrush="{DynamicResource HighlightBrush}"/>
</UserControl>
