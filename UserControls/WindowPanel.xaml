<UserControl x:Class="Shiftless.Clockwork.Assets.Editor.UserControls.WindowPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Shiftless.Clockwork.Assets.Editor.UserControls"
             mc:Ignorable="d"
             x:Name="Root"
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Background="LightGray" Padding="10">
        <!-- Static content -->
        <StackPanel>
            <TextBlock Text="Static Content Here" Margin="5"/>

            <!-- ContentPresenter to display dynamic content -->
            <ContentPresenter Content="{Binding Content}" />
        </StackPanel>
    </Border>
</UserControl>