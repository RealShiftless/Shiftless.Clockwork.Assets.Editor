<UserControl x:Class="Shiftless.OCM.Editor.UserControls.Settings.ColorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Shiftless.OCM.Editor.UserControls.Settings"
             mc:Ignorable="d" 
             Height="20"
             Width="250">
    <StackPanel Orientation="Horizontal">
        <TextBox x:Name="Body"
         Text="FFFFFFFF"
         MaxLength="8"
         Width="80"
         PreviewTextInput="Body_PreviewTextInput"
                 TextInput="Body_TextInput"/>

        <Border BorderThickness="1"
                BorderBrush="DarkGray"
                Width="50"
                Margin="20, 0, 0, 0">
            <Border x:Name="ColorBorder"
                    
                    Background="#FFFFFF"
                    BorderThickness="1"
                    BorderBrush="DarkGray"/>
        </Border>
        
    </StackPanel>
</UserControl>
